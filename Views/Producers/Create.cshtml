@model Producer
@{
    ViewData["Title"] = "Add new Producer";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Producer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />

                        <div class="form-group text-center">
                            <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ProfilePictureURL" class="control-label">Profile Picture</label>
                            <input asp-for="ProfilePictureURL"  class="form-control" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div><br />

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div><br />

                        <div class="form-group">
                            <label asp-for="Bio" class="control-label">Biography</label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div><br />
                        
                        <div class="form-group">
                            <a class="btn btn-outline-secondary"  asp-action="index">All Producers</a>
                            <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        </div>

                    </form>
           </div>
        </div>
    </div>
</div>

@*function to show the picture of added actor
*@
@section Scripts
{ 
        <script>
            $(document).ready(function () {
                var output = document.getElementById('ProfilePicturePreview');
                output.src = $("#ProfilePictureURL").val();
            })
            $("#ProfilePictureURL").on("change", function () {
                var output = document.getElementById('ProfilePicturePreview');
                output.src = $(this).val();
            })
        </script>
}