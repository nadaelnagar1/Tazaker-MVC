@model Cinema
@{
    ViewData["Title"] = "Edit cinema";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />

                    <div class="form-group text-center">
                        <img id="LogoPicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Logo" class="control-label">Profile Picture</label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div><br />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Full Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div><br />

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Biography</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div><br />

                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index">All Cinemas</a>
                        <input type="submit" value="Edit" class="btn btn-outline-success float-end" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@*function to show the picture of added actor
*@
@section Scripts
    {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPicturePreview');
            output.src = $("#Logo").val();
        })
        $("#Logo").on("change", function () {
            var output = document.getElementById('LogoPicturePreview');
            output.src = $(this).val();
        })
    </script>
}